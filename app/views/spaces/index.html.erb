<h1><%= t ".title" %></h1>
<%= link_to t(".add_new_space"), new_space_path, class: "btn btn-primary"%>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><%= t ".number" %></th>
      <th scope="col"><%= t ".ID" %></th>
      <th scope="col"><%= t ".name" %></th>
      <th scope="col"><%= t ".description" %></th>
      <th scope="col"><%= t ".capacity" %></th>
      <th scope="col"><%= t ".price_hour" %></th>
      <th scope="col"><%= t ".price_day" %></th>
      <th scope="col"><%= t ".price_month" %></th>
      <th scope="col"><%= t ".venue" %></th>
      <th scope="col"><%= t ".status" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "space_row", collection: @space_rows %>
  </tbody>
</table>
